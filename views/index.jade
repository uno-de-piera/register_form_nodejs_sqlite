extends layout

block content
  //ventana modal donde mostraremos los mensajes de error
  #myModal.modal.fade(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
    .modal-header
      h2.title-modal
      hr
      .modal-body
        p.messageModal
      .modal-footer
        a.btn.btn-danger(data-dismiss="modal",aria-hidden="true") Cerrar
  #login-form.well.span7.offset3                      
    form.form-horizontal()#caja-login#registerSubmit.well.span6   
      h1 Register Form
      h6.subheading Registrate a trav√©s del formulario
      hr
      div.control-group
        label.control-label(for='username') Nombre de usuario
        div.controls
          input(name="username",type="text",placeholder="Escribe un nombre de usuario",required).span4.username
      div.control-group
        label.control-label(for="password") Escribe un Password
        div.controls
          input(name="password",type="password",placeholder="Escribe un password",required).span4.password
      div.control-group
        label.control-label(for="repassword") Confirma el Password
        div.controls
          input(name="repassword",type="password",placeholder="Confirma el password",required).span4.repassword
      div.control-group
        hr
        label.control-label()
        div.controls
          button.btn.btn-large.btn-block.btn-primary() 
            i.icon-white.icon-ok-sign  
            |  Registrarme